<%- include("partials/header"); -%>


<h1>Compose</h1>

<form action="/" method="post">
    <div class="mb-3">
        <label for="post" class="form-label">Title:</label>
        <input type="text" name="newTitle" class="form-control" placeholder="Enter title">
    </div>
    <div class="mb-3"></div>
        <label for="post" class="form-label">Post:</label>
        <textarea type="text" class="form-control" name="newPost" cols="30" rows="10" placeholder="Compose your post"></textarea>
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
    
</form>



